{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
    
<div style="padding-top:100px"> 

    <div class="loginmodal-container">
        <h1>ENTRE NA SUA CONTA</h1><br>

    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}

        <div class="form-group">
            <label for="username">{{ 'security.login.username'|trans }}</label>
            <input type="text" id="username" name="_username" placeholder="Nome de usuÃ¡rio ou e-mail" value="{{ last_username }}" required="required" />
        </div>

        <div class="form-group">
            <label for="password">{{ 'security.login.password'|trans }}</label>
            <input type="password" id="password" name="_password" placeholder="Senha" required="required" />
        </div>

        <div class="form-group">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        </div>

        <div class="form-group">

            <input  type="submit" id="_submit" class="btn btn-info btn-block" style="border-radius:0" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        </div>

        <div class="form-group">
                    <div class="login-help">
                        <a href="/register" style="color: #D33724">REGISTRE-SE</a> - <a href="#">Esqueceu a senha?</a>
                    </div>
        </div>

    </div>
    </form>
</div>